<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content"
    android:background="@drawable/border_listnews">

    <ImageView
        android:id="@+id/item_foto"
        android:layout_width="113dp"
        android:layout_height="114dp"
        android:src="@drawable/slide1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_judul_berita"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="19dp"
        android:text="judul Berita"
        android:justificationMode="inter_word"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/item_foto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_tanggal_berita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="tanggal berita"
        android:textColor="#C1C1C1"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/item_foto"
        app:layout_constraintTop_toBottomOf="@+id/item_judul_berita" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="16dp"
        android:text="More..."
        android:textColor="#19A6FF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>